<%- include ('../partials/header') %>
<% if (products != null) { %>


<div class="container">
  <div class="container text-white py-5 text-center">
    <h1 class="display-4"> Shopping cart</h1>

  </div>
  <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col" class="border-0 bg-light">
              <div class="p-2 px-3 text-uppercase">Product</div>
            </th>
            <th scope="col" class="border-0 bg-light">
              <div class="py-2 text-uppercase">Price</div>
            </th>
            <th scope="col" class="border-0 bg-light">
              <div class="py-2 text-uppercase">Quantity</div>
            </th>
            <th scope="col" class="border-0 bg-light">
              <div class="py-2 text-uppercase">Remove</div>
            </th>
          </tr>
        </thead>
        <% for (let product of products) { %>
        <tbody>
          <tr>
            <th scope="row" class="border-0">
              <div class="p-2">
                <img src="<%- product.item.ImageLink %>" alt="" width="70" class="img-fluid rounded shadow-sm">
                <div class="ml-3 d-inline-block align-middle">
                  <h5 class="mb-0 text-dark d-inline-block align-middle"> <%= product.item.title %></h5>
                  <span class="text-muted font-weight-normal font-italic d-block">It's <%- product.item.LevelOfFunny %>
                    points of fun </span>
                </div>
              </div>
            </th>
            <td class="border-0 align-middle"><strong><%= product.item.price %>$</strong></td>
            <td class="border-0 align-middle"><strong><%= product.qty %></strong></td>
            <td class="border-0 align-middle"><a href="#" class="text-dark"><i class="fa fa-trash"></i></a></td>
          </tr>
        </tbody>
    </div>
    <% } %>
    </table>
  </div>
  <div class="col-lg-6">
    <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
    <div class="p-4">
      <ul class="list-unstyled mb-4">
        <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total: </strong>
          <h5 class="font-weight-bold"><%= totalPrice %>$</h5>
        </li>
      </ul>
    </div>
  </div>
      
</div>
</div>
<%} else { %>

<div class="container">
  <div class="container text-white py-5 text-center">
    <h1 class="display-4"> No Items In The Cart</h1>

  </div>
  <% } %>
  <%- include ('../partials/footer') %>